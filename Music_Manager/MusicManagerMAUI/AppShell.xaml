<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MusicManagerMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MusicManagerMAUI"
    Shell.FlyoutBehavior="Flyout"
    Title="MusicManagerMAUI">

    <FlyoutItem Title="Albums">
        <ShellContent
            Title="Albums"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Artists">
        <ShellContent
            Title="Artists"
            ContentTemplate="{DataTemplate local:ArtistPage}"
            Route="ArtistPage" />
    </FlyoutItem>

    <FlyoutItem Title="Ratings">
        <ShellContent
            Title="Ratings"
            ContentTemplate="{DataTemplate local:RatingPage}"
            Route="RatingPage" />
    </FlyoutItem>
    
    <FlyoutItem Title="Artist with the most albums">
        <ShellContent
            Title="Artist with the most albums"
            ContentTemplate="{DataTemplate local:ArtistWithMostAlbumsPage}"
            Route="ArtistWithMostAlbumsPage" />
    </FlyoutItem>

    <FlyoutItem Title="Albums with max rating">
        <ShellContent
        Title="Albums with max rating"
        ContentTemplate="{DataTemplate local:AlbumsWithMaxRatingPage}"
        Route="AlbumsWithMaxRatingPage" />
    </FlyoutItem>

</Shell>
